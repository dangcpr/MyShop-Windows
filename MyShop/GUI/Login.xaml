<Window x:Class="MyShop.GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop.GUI"
        
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        mc:Ignorable="d"
        Title="MyShop Login" Height="680" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition Width="3.0*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="680"/>
        </Grid.RowDefinitions>

        <StackPanel  Grid.Column="0" Grid.Row="0" Orientation="Vertical" Width="400" Margin="0 80px 0 100px">
            <Image Source="/assets/logo.png" Width="230px" HorizontalAlignment="Left"/>
            <StackPanel Margin="0 30px 0 30px">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Hey, Hello" FontSize="30px" Foreground="#706E78" FontWeight="Bold"/>
                    <TextBlock Text="👋" FontSize="30px" Foreground="Gold" FontWeight="Bold" Margin="10px 0 0 0"/>                             
                </StackPanel>
                <TextBlock Text="Please log into your portal" FontSize="20px" Foreground="#706E78" Margin="0 10px 0 0"/>
            </StackPanel>
            <StackPanel Width="400px" HorizontalAlignment="Left">
                <TextBox Name="usernameInput" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Username"
                         FontSize="20px" Width="400px" Margin="0 0 0 50px"                     
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <PasswordBox Name="passwordInput"
                          FontSize="20px" Width="400px"
                          materialDesign:HintAssist.Hint="Password"
                          Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                <TextBlock Text="Forget Password?" Foreground="#8E8CFF" FontWeight="Bold" FontSize="15px"
                           HorizontalAlignment="Right" Margin="0 25px 0 25px"/>
                <Button Width="400px" Content="Login" FontSize="20px"
                        Height="40px" Background="#8E8CFF" BorderThickness="0"
                        Click="handleLoginAccount"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">
            <Image Source="/assets/login-cover.png" Height="680" />
        </StackPanel>
    </Grid>
</Window>
