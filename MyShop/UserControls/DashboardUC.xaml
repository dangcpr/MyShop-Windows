<UserControl x:Class="MyShop.UserControls.DashboardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:local="clr-namespace:MyShop.UserControls"
             xmlns:uc="clr-namespace:MyShop.UserControls"

             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"       
             
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080" Width="1080">
    <Grid Margin="40">
        <StackPanel Orientation="Vertical">
            <WrapPanel Width="900" MinWidth="400" HorizontalAlignment="Center" Background="Red">
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock Text="Dashboard" FontSize="30px" FontWeight="Bold"/>
                    <TextBlock Text="{Binding username}" Foreground="#79747E"
                               FontSize="20px" d:Text="Nguyễn Văn A"/>
                </StackPanel>
                <uc:SearchBoxUC Margin="200 0 0 0" VerticalAlignment="Center"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
